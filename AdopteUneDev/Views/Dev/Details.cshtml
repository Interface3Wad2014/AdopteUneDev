                        <div class="col-sm-7">
                            <div class="product-information">
                                <!--/product-information-->
                                <img src="../../Content/images/product-details/new.jpg" class="newarrival" alt="" />
                                <h2>@Model.CurrentDev.DevFirstName @Model.CurrentDev.DevName</h2>
                                <p>Web ID: @Model.CurrentDev.DevCategPrincipale</p>
                                <img src="../../Content/images/product-details/rating.png" alt="" />
                                <span>
                                    <span>&euro; @Model.CurrentDev.DevHourCost/Hours</span>
                                    <label>Quantity:</label>
                                    <input type="text" value="3" />
                                    <button type="button" class="btn btn-fefault cart">
                                        <i class="fa fa-shopping-cart"></i>
                                        Add to cart
                                    </button>
                                </span>
                                <p><b>Availability:</b> In Stock</p>
                                <p><b>Condition:</b> New</p>
                                <p><b>Category:</b> @Model.CurrentDev.NomCategPrincipale</p>
                               
                            </div><!--/product-information-->
                        </div>
                    </div><!--/product-details-->

                    <div class="category-tab shop-details-tab">
                        <!--category-tab-->
                        <div class="col-sm-12">
                            <ul class="nav nav-tabs">
                                <li><a href="#details" data-toggle="tab">Details</a></li>
                                <li><a href="#tag" data-toggle="tab">Tag</a></li>
                                <li class="active"><a href="#reviews" data-toggle="tab">Reviews (5)</a></li>
                            </ul>
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane fade" id="details">
                                <div class="col-sm-3">
                                   
                                              <b>E-Mail</b> @Model.CurrentDev.DevMail <br />

                                </div>
                             
                            </div>                 
                            <div class="tab-pane fade" id="tag">
                                <div class="col-sm-12">
                                    @Html.TagCloud(@Model.CurrentDev)
                                    </div>
                                </div>

                            <div class="tab-pane fade active in" id="reviews">
                                @{
                                Html.RenderPartial("_Reviews", @Model.CurrentDev.Lstreview);                                
                                }
                            </div>

                        </div>
