@model IEnumerable<AdopteUneDev.WADAL.Review>
<div class="col-sm-12">
    @foreach (AdopteUneDev.WADAL.Review r in Model)
    {

        <ul>
            <li><a href=""><i class="fa fa-user"></i>@r.ReviewName</a></li>
            <li><a href=""><i class="fa fa-clock-o"></i>@r.ReviewDate.ToShortTimeString()</a></li>
            <li><a href=""><i class="fa fa-calendar-o"></i>@r.ReviewDate.ToShortDateString()</a></li>
        </ul>
        <p>@r.ReviewText</p>

    }
    <p><b>Write Your Review</b></p>
    <form action="/Dev/postReview" method="post">
        <span>
            <input type="text" name="txtName" placeholder="Your Name" />
            <input type="email" name="txtMail" placeholder="Email Address" />
            <input type="hidden" name="id" value='@ViewContext.RouteData.Values["id"]' />
        </span>
        <textarea name="txtText"></textarea>
        <b>Rating: </b> <img src="../../Content/images//product-details/rating.png" alt="" />
        <button type="submit" class="btn btn-default pull-right">
            Submit
        </button>
    </form>
</div>

